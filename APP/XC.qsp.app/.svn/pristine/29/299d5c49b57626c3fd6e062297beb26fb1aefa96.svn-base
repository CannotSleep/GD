		},
		onShow:function(){
			if(this.isfirstopen!=0){
			   console.log("页面显示");
			   this.AutographList = [];
			   this.isfirstopen = 0;
			   this.getDetails(this.id);
			}
		},
		data() {
			return {
				Token: '',
				id:'',
				ProjectName: '',
				Position: '',
				Engineering: '',
				Angle: '',
				Grade: '',
				StartDate: '',
				EndDate: '',
				dayTg: '',
				nightTg: '',
				ZNigNum: '',
				ZDayNum: '',
